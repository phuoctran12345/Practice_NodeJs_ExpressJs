<h1>Đăng khoá học </h1>

<form action="/courses/store" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Tên khoá học</label>
    <input
      name="name"
      type="text"
      class="form-control"
      id="name"
      placeholder="Example input placeholder"
    />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Mô tả</label>
    <input
      name="description"
      type="text"
      class="form-control"
      id="description"
      placeholder="Another input placeholder"
    />
  </div>

  <div class="mb-3">
    <label for="videoId" class="form-label">Video ID</label>
    <input
      name="videoId"
      type="text"
      class="form-control"
      id="videoId"
      placeholder="Another input placeholder"
    />
  </div>

  <div class="mb-3">
    <label for="level" class="form-label">Trình Độ</label>
    <input
      name="level"
      type="text"
      class="form-control"
      id="level"
      placeholder="Another input placeholder"
    />
  </div>

  <button type="submit" class="btn btn-primary">Thêm khoá học</button>
</form>